<h1>Create New Test</h1>

<form action="/tests" method="post">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <p>
    <label for="test-title">Title:</label>
    <input type="text" name="test[title]" id="test-title">
  </p><br>

  <p>
    <label for="test-level">Level:</label>
    <input type="text" name="test[level]" id="test-level">
  </p><br>

  <label for="test-category_id">Category:</label>
  <select name="test[category_id]">
      <%= @categories.each do |category| %>
        <option value="<%= category.id %>"><%= category.title %></option>
      <% end %>
  </select>
  <br>
  <br>
  <br>

  <label for="author_id">Author:</label>
  <select name="test[author_id]">
      <%= @author.each do |author| %>
        <option value="<%= author.id %>"><%= author.name %></option>
      <% end %>
  </select>
  <br>
  <br>
  <br>

  <input type="submit" value="Create">
</form>
