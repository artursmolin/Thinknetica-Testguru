<h1>Edit <%= @test.title %> Test</h1>

<%= form_with model: @test, local: true do |form| %>
  <% if @test.errors.present? %>
    <div>
      <h2>Errors detected:</h2>

      <ul>
        <% @test.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :title %>
    <%= form.text_field :title, id: :test_title %>
  </p>

  <p>
    <%= form.label :level %>
    <%= form.number_field :level, id: :test_level %>
  </p>

  <p>
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt:true %>
  </p>

  <p>
    <%= form.label :author %>
    <%= form.collection_select :author, User.all, :id, :name, prompt:true %>
  </p>

  <p><%= form.submit %></p>
<% end %>
